<h1>Magic Eight Ball</h1>

<form action="/answer" method="POST">
    
    <textarea name="question" placeholder="Enter your question here" rows="4" cols="50" required></textarea>
    
    <br>
    <label>Choose your answer list:</label>
    <select name="list_id" >
        
        <option value="default" selected> Magic Eight Ball </option>
        
        <% @user.answer_lists.each do |list|%>
            <option value="<%= list.id %>"><%= list.list_name %></option>
        <% end %>  

    </select>
   
    <br><br>
    <input type="submit" value="SHAKE THE EIGHT BALL">

</form>

